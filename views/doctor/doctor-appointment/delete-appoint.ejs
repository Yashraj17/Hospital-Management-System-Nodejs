<%- include('../navbar') %>
<div class="container-fluid ps-0">
    <div class="row w-100 p-0">
        <div class="col-2" id="side" style="height:91vh;">
            <%- include('../side') %>
        </div>
        <div class="col-10">
            <h4 class="mt-3 border-start border-4 px-2">Delete Your Appointments</h4>
            <table class="table mt-4">
                <thead class="table-dark">
                  <tr>
                      <th>Patient Name</th>
                      <th>Patient Picture</th>
                      <th>Description</th>
                      <th>Delete</th>
                  </tr>
                </thead>
                <tbody>
                    <% data.forEach(data => { %>
                        <tr>
                            <td><%-data.patientId.patientname %></td>
                            <td>
                              <img src="/<%-data.patientId.image %>" alt="" style="height: 60px;width: 60px;">
                                </td>
                            <td><%-data.description %></td>
                            <td>
                                <a href="/doctor/delete-appointment/<%-data._id %>" class="btn btn-sm btn-danger"><i class="bi bi-trash-fill"></i></a>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
              </table>
        </div>
    </div>
</div>