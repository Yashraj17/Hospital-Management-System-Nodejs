<%- include('base') %>
    <div class="container">
        <div class="col-7 mx-auto">
            <div class="card shadow  mt-3">
                <div class="row text-center">
                    <h1>Apply for Management work </h1>
                </div>
                <div class="px-3">
                    <form action="" method="post" enctype="multipart/form-data">
                        <div class="mt-3">
                            <label for="">UserName</label>
                            <input type="text" name="username" class="form-control"  placeholder="Enter your registered email">
                        </div>
                        <div class="mt-3">
                            <label for="">Email</label>
                            <input type="email" name="email" class="form-control"  placeholder="Enter your registered email">
                        </div>
                            <div class="mt-3">
                                <label for="">Address</label>
                                <input type="text" name="address" class="form-control" placeholder="Enter Password">
                            </div>
                            <div class="mt-3">
                                <label for="">Contact</label>
                                <input type="number" name="contact" class="form-control" placeholder="Enter Password">
                            </div>
                            <div class="mt-3">
                                <label for="">Role</label>
                                <input type="text" name="role" class="form-control" placeholder="Enter Password">
                            </div>
                            <div class="mt-3">
                                <label for="">Image</label>
                                <input type="file" name="image" class="form-control" placeholder="Enter Password">
                            </div>
                            <div class="mt-3">
                                <label for="">Password</label>
                                <input type="password" name="password" class="form-control" placeholder="Enter Password">
                            </div>
                            <div class="mt-3">
                                    <input type="submit" class="btn btn-primary w-100" value="Apply Now">
                            </div>
                    </form>
                </div>
            </div>
            
        </div>
    </div>
