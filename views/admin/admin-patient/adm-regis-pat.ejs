<%- include('../navbar') %>
<div class="container-fluid ps-0">
    <div class="row w-100 p-0">
        <div class="col-2" id="side" style="height:94vh;">
            <%- include('../side') %>
        </div>
        <div class="col-10">
            <h4 class="mt-3 border-start border-4 px-2">Add New Patient To Hospital</h4>
            <div class="row mt-4">
                <div class="col-9 mx-auto">
                    <div class="card px-5">
                        <form action="" method="post" enctype="multipart/form-data">
                            <div class="mt-3">
                                <label for="">Name of Patient</label>
                                <input type="text" name="patientname" class="form-control"  placeholder="Enter your patient name">
                            </div>
                            <div class="row">
                                <div class="mt-3 col">
                                    <label for="">Email</label>
                                    <input type="email" name="email" class="form-control"  placeholder="Enter your registered email">
                                </div>
                                    <div class="mt-3 col">
                                        <label for="">Address</label>
                                        <input type="text" name="address" class="form-control" placeholder="Enter address">
                                    </div>
                            </div>
                            <div class="row">
                                <div class="mt-3 col">
                                    <label for="">Contact</label>
                                    <input type="contact" name="contact" class="form-control" placeholder="Enter contact">
                                </div>
                                <div class="mt-3 col">
                                    <label for="">Doctor's Name</label>
                                    <select class="form-select"  name="doctor">
                                        <option selected>Doctor And Specialization</option>
                                        <% data.forEach(data => { %>
                                            <option value=<%-data._id %>><%-data.doctorname %> (<%-data.specialization.departmentName %>)</option>
                                           <% }) %>
                                      </select>
                                </div>
                            </div>
                               <div class="row">
                                <div class="mt-3 col">
                                    <label for="">Image</label>
                                    <input type="file" name="image" class="form-control">
                                </div>
                                <div class="mt-3 col">
                                    <label for="">Date</label>
                                    <input type="date" name="date" class="form-control" >
                                </div>
                               </div>
                                
                                <div class="mt-3">
                                    <label for="">Symtoms</label>
                                    <textarea name="symptom" class="form-control"></textarea>
                                </div>
                                <div class="mt-3">
                                    <label for="">Password</label>
                                    <input type="password" name="password" class="form-control" placeholder="Enter Password">
                                </div>
                                <div class="mt-3">
                                        <input type="submit" class="btn btn-primary w-100" value="Appointment">
                                </div>
                        </form>
                    </div>
                </div>
              
            </div>
        </div>
    </div>
</div>