<%- include('../navbar') %>
<div class="container-fluid ps-0">
    <div class="row w-100 p-0">
        <div class="col-2" id="side" style="height:91vh;">
            <%- include('../side') %>
        </div>
        <div class="col-10">
            <div class="row mt-4">
                <div class="col-3">
                    <div class="card bg-warning text-white shadow">
                        <div class="card-body ms-2">
                            <h1 class="display-7"><i class="bi bi-person-fill"></i></h1>
                            <a href="/admin/view-patient" class="h5 text-light text-decoration-none"> Patient Record <%-pat_no %></a>
                        </div>
                    </div>
                </div>
                <div class="col-3">
                    <div class="card bg-info text-white shadow">
                        <div class="card-body ms-2">
                            <h1 class="display-7"><i class="bi bi-file-medical-fill"></i></h1>
                            <a href="/admin/register-patient" class="h5 text-light text-decoration-none">Admit Patient +</a>
                        </div>
                    </div>
                </div>
                <div class="col-3">
                    <div class="card bg-danger text-white shadow">
                        <div class="card-body ms-2">
                            <h1 class="display-7"><i class="bi bi-file-earmark-check-fill"></i></h1>
                            <a href="/admin/approve-patient" class="h5 text-light text-decoration-none"> Approve Patient <%-pat_approve %></a>
                        </div>
                    </div>
                </div>
                <div class="col-3">
                    <div class="card bg-success text-white shadow">
                        <div class="card-body ms-2">
                            <h1 class="display-7"><i class="bi bi-file-earmark-minus"></i></h1>
                            <a href="/admin/discharge-patient" class="h5 text-light text-decoration-none">Discharge Patient</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>