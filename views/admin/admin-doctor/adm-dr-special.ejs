<%- include('../navbar') %>
    <div class="container-fluid ps-0">
        <div class="row w-100 p-0">
            <div class="col-2" id="side" style="height:91vh;">
                <%- include('../side') %>
            </div>
            <div class="col-10">
                <a href="" class="btn btn-sm btn-success mt-3 float-end" data-bs-toggle="modal"
                    data-bs-target="#exampleModal">Add Department+</a>
                <h4 class="mt-3 border-start border-4 px-2">Department And Doctors</h4>

                <table class="table mt-4">
                    <thead class="table-dark">
                        <tr>
                            <th>Department</th>
                            <th>Doctor Name</th>
                            <th>Profile Picture</th>
                            <th>Contact</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% data.forEach(data => { %>
                            <tr>
                                <td><%-data.specialization.departmentName%></td>
                                <td><%-data.doctorname %></td>
                                <td>
                                  <img src="/<%-data.image %>" alt="" style="height: 60px;width: 60px;">
                                </td>
                                <td><%-data.contact %></td>
                                
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>



    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Add Department</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="" method="post">
                        <div class="mb-3">
                            <label for="">Department</label>
                            <input type="text" name="department" class="form-control" placeholder="Department Name">
                            <div class="mt-3">
                                <input type="submit" value="Add +" class="btn btn-success">
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>